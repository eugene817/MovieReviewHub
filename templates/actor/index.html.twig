
{% extends 'base.html.twig' %}
{% block title %}Actors | MovieReviewHub{% endblock %}

{% block body %}
  <h2 class="text-3xl font-bold mb-6 dark:text-white">Actors</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <a href="{{ path('app_actor_new') }}"
       class="col-span-1 flex items-center justify-center bg-gray-700 rounded-2xl p-6 hover:bg-gray-600 transition">
      <span class="text-xl font-semibold text-green-400">+ Add Actor</span>
    </a>
    {% for actor in actors %}
      <div class="bg-gray-800 rounded-2xl shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition p-6">
        <h3 class="text-2xl font-semibold text-indigo-300">{{ actor.name }}</h3>
        <div class="mt-4 flex space-x-2">
          <a href="{{ path('app_actor_show', {id: actor.id}) }}"
             class="px-3 py-1 bg-blue-600 hover:bg-blue-700 rounded-lg text-white text-sm">View</a>
          <a href="{{ path('app_actor_edit', {id: actor.id}) }}"
             class="px-3 py-1 bg-yellow-600 hover:bg-yellow-700 rounded-lg text-white text-sm">Edit</a>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}
