
{% extends 'base.html.twig' %}
{% block title %}Actor: {{ actor.name }} | MovieReviewHub{% endblock %}

{% block body %}
  <div class="max-w-lg mx-auto bg-gray-800 rounded-2xl shadow-lg p-8">
    <h2 class="text-2xl font-bold text-indigo-200 mb-4">{{ actor.name }}</h2>
    <p class="text-gray-400 mb-6">ID: {{ actor.id }}</p>
    <div class="flex space-x-3">
      <a href="{{ path('app_actor_edit', {id: actor.id}) }}"
         class="px-4 py-2 bg-yellow-600 hover:bg-yellow-700 rounded-lg text-white">Edit</a>
      <form method="post" action="{{ path('app_actor_delete', {id: actor.id}) }}"
            onsubmit="return confirm('Delete this actor?')">
        <input type="hidden" name="_token" value="{{ csrf_token('delete'~actor.id) }}">
        <button class="px-4 py-2 bg-red-600 hover:bg-red-700 rounded-lg text-white">Delete</button>
      </form>
      <a href="{{ path('app_actor_index') }}"
         class="px-4 py-2 bg-gray-600 hover:bg-gray-500 rounded-lg text-gray-200">Back</a>
    </div>
  </div>
{% endblock %}
