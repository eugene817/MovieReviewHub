
{% extends 'base.html.twig' %}
{% block title %}{{ genre is defined ? 'Edit Genre' : 'Add Genre' }} | MovieReviewHub{% endblock %}

{% block body %}
  <div class="max-w-lg mx-auto bg-gray-800 rounded-2xl shadow-lg p-8">
    <h2 class="text-2xl font-bold mb-6 text-white">
      {{ genre is defined ? 'Edit Genre' : 'Create Genre' }}
    </h2>
    {{ form_start(form) }}
      <div class="mb-4">
        {{ form_label(form.name, null, {label_attr: {class: 'block text-gray-200 mb-1'}}) }}
        {{ form_widget(form.name, {attr: {class: 'w-full px-4 py-2 rounded-lg bg-gray-700 text-white'}}) }}
        {{ form_errors(form.name) }}
      </div>
      <div class="flex justify-end space-x-4">
        <a href="{{ path('app_genre_index') }}"
           class="px-4 py-2 bg-gray-600 hover:bg-gray-500 rounded-lg text-gray-200">Cancel</a>
        <button type="submit"
                class="px-4 py-2 bg-green-500 hover:bg-green-600 rounded-lg text-white">
          {{ genre is defined ? 'Update' : 'Create' }}
        </button>
      </div>
    {{ form_end(form) }}
  </div>
{% endblock %}
