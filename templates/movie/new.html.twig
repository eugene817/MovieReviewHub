{% extends 'base.html.twig' %}

{% block title %}Add Movie{% endblock %}

{% block body %}
  <div class="card shadow-sm">
    <div class="card-body">
      <h1 class="card-title mb-4">Create new Movie</h1>
      {{ form_start(form) }}
        <div class="mb-3">
          {{ form_row(form.title, {
            attr: {class: 'block w-full bg-gray-800 text-gray-200 border border-gray-700 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}
          }) }}
        </div>
        <div class="mb-3">
          {{ form_row(form.genres, {
            attr: {class: 'block w-full bg-gray-800 text-gray-200 border border-gray-700 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}
          }) }}
        </div>
        <div class="mb-3">
          {{ form_row(form.directors, {
            attr: {class: 'block w-full bg-gray-800 text-gray-200 border border-gray-700 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}
          }) }}
        </div>
        <div class="mb-3">
          {{ form_row(form.actors, {
            attr: {class: 'block w-full bg-gray-800 text-gray-200 border border-gray-700 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}
          }) }}
        </div>
        <button class="btn btn-primary">Save</button>
      {{ form_end(form) }}
      <a href="{{ path('app_movie_index') }}" class="btn btn-link mt-3">Back to list</a>
    </div>
  </div>
{% endblock %}
