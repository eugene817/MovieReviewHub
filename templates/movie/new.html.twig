{% extends 'base.html.twig' %}

{% block title %}Add Movie{% endblock %}

{% block body %}
  <div class="card shadow-sm">
    <div class="card-body">
      <h1 class="card-title mb-4">Create new Movie</h1>
      {{ form_start(form) }}
        <div class="mb-3">{{ form_row(form.title) }}</div>
        <div class="mb-3">{{ form_row(form.genres) }}</div>
        <div class="mb-3">{{ form_row(form.directors) }}</div>
        <div class="mb-3">{{ form_row(form.actors) }}</div>
        <button class="btn btn-primary">Save</button>
      {{ form_end(form) }}
      <a href="{{ path('app_movie_index') }}" class="btn btn-link mt-3">Back to list</a>
    </div>
  </div>
{% endblock %}
