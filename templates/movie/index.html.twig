
{# templates/movie/index.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}All Movies | MovieReviewHub{% endblock %}

{% block body %}
  <h2 class="text-3xl font-bold mb-6 dark:text-white">All Movies</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    {% for movie in movies %}
      <div class="bg-gray-800 rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition">
        {% if movie.poster %}
          <img src="{{ movie.poster }}" alt="{{ movie.title }}"
               class="w-full h-56 object-cover">
        {% endif %}
        <div class="p-4">
          <h3 class="text-xl font-semibold text-indigo-300">{{ movie.title }}</h3>
          {% if movie.description %}
            <p class="mt-2 text-gray-400 overflow-hidden h-24">{{ movie.description }}</p>
          {% endif %}
          <a href="{{ path('app_movie_show', {'id': movie.id}) }}"
             class="mt-4 inline-block text-indigo-200 hover:text-indigo-400 font-medium">
            View details â†’
          </a>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}
