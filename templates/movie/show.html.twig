{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
    <h1>Movie</h1>

   <h2>Opinions</h2>
{% for review in movie.reviews %}
  <strong>{{ review.author.email }}</strong>
  <span>{{ review.rating }}/10</span>
  <p>{{ review.content }}</p>
{% else %}
  <em>There is no reviews</em>
{% endfor %}

{% if is_granted('ROLE_USER') %}
    {{ render(controller(
      'App\\\\Controller\\\\ReviewController::new',
      { movieId: movie.id }
    )) }}
  {% endif %}

    <a href="{{ path('app_movie_index') }}">back to list</a>

    <a href="{{ path('app_movie_edit', {'id': movie.id}) }}">edit</a>

    {{ include('movie/_delete_form.html.twig') }}
{% endblock %}
